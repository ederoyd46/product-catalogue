{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "GraphQL",
      "program": "${workspaceRoot}/target/debug/local_graphql",
      "env": {
        "STORE_PRODUCT_URL": "http://localhost:8081",
        "STORE_INVENTORY_URL": "http://localhost:8082"
      },
      "sourceLanguages": ["rust"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "StoreProduct",
      "program": "${workspaceRoot}/target/debug/local_store_product",
      "env": {
        "ENDPOINT_URL": "http://localhost:4566",
        "DATABASE": "default-product-catalogue"
      },
      "sourceLanguages": ["rust"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "StoreInventory",
      "program": "${workspaceRoot}/target/debug/local_store_inventory",
      "env": {
        "ENDPOINT_URL": "http://localhost:4566",
        "DATABASE": "default-product-catalogue"
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "GraphQL/Services",
      "configurations": ["GraphQL", "StoreProduct", "StoreInventory"],
      "stopAll": true
    }
  ]
}
